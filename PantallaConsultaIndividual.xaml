<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Tienda.PantallaConsultaIndividual"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Consulta Individual">

    <Grid>
        <Image Aspect="AspectFill" Source="fondo.jpeg" />

        <Grid RowDefinitions="Auto,Auto,*" ColumnDefinitions="*,Auto">

            <Entry
                Grid.Row="0" 
                Grid.ColumnSpan="2"
                x:Name="entryBuscarCliente"
                Margin="20,20,20,20"
                BackgroundColor="{StaticResource rosita}"
                FontFamily="Arial"
                FontSize="20"
                HeightRequest="10"
                Placeholder="Buscar Cliente..."
                PlaceholderColor="{StaticResource blanquito}"
                TextColor="{StaticResource blanquito}"
                VerticalOptions="Start" />

            <Button Text="AtrÃ¡s"
                    Grid.Row="1"
                    Grid.Column="0"
                    x:Name="btnAtras"
                    Margin="20,10,0,0"
                    Clicked="OnClickAtras"
                    HorizontalOptions="Start"
                    FontFamily="Arial"
                    BackgroundColor="{StaticResource blanquito}"
                    TextColor="{StaticResource rosita}"/>   


            <Button Text="Siguiente"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,10,20,0"
                    HorizontalOptions="End"
                    x:Name="btnSiguiente"
                    Clicked="OnClickSiguiente"
                    FontFamily="Arial"
                    BackgroundColor="{StaticResource blanquito}"
                    TextColor="{StaticResource rosita}"/>


            <CollectionView
                x:Name="collectionClientes"
                Grid.Row="2"
                ItemsSource="{Binding ListaClientes}">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="0,40,0,0"
                              ColumnDefinitions="*" RowDefinitions="*,*,*,*,*" >

                            <Label Grid.Row="0"
                                   FontSize="30"
                                   Text="{Binding Nombre}"
                                   Style="{StaticResource LabelConsultaTexto}"/>
                            
                            <Label Grid.Row="1"
                                   Text="{Binding Apellidos}"
                                   Style="{StaticResource LabelConsultaTexto}"/>
                            
                            <Label Grid.Row="2"
                                   Text="{Binding Ciudad}"
                                   Style="{StaticResource LabelConsultaTexto}"/>

                            <Label Grid.Row="3"
                                   Text="{Binding Correo}"
                                   Style="{StaticResource LabelConsultaTexto}"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </Grid>
    </Grid>
</ContentPage>